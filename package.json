  "scripts": {
    "lint": "npm run lint:sass && npm run lint:js",
    "lint:sass": "sass-lint -c .sass-lint.yml --verbose",
    "lint:js": "eslint -c .eslintrc _page/js/*.js",
    "watch": "node _page/build-scripts/build.js --environment dev --watch true & npm run watch:browsersync",
    "watch:browsersync": "./node_modules/.bin/browser-sync start --proxy 'localhost:7788' --files build",
    "build": "node _page/build-scripts/build.js --environment dev",
    "build:prod": "node _page/build-scripts/build.js --environment prod",
    "build:img": "node _page/build-scripts/build-img.js",
    "start:prod": "node _page/build-scripts/build.js --environment prod --start true",
    "ndes": "node ./node_modules/.bin/ndes"
  },
  "repository": {
    "type": "git",
